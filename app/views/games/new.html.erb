<div>
  <h1>===== Welcome to the longest word-game! =====</h1>
  <h2>Here is your grid:</h2>
    <% @letters.each do |letter|%>
    <%= letter.capitalize %>
    <% end %>
  <h2>=============================================</h2>
  <h2>What is your longest word?</h2>
  
  <form action="/score" method="post">
  <div class="input-group mb-3">
    <input type="text" name="answer" class="form-control" placeholder="Your word" aria-describedby="button-addon2">
    <button class="btn btn-outline-secondary" type="submit" value="answer" id="button-addon2">Play</button>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </div>
  </form>
</div>
